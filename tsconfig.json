{
  "exclude": [
    "node_modules/",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "outDir": "static",
    "strict": true,
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "types": [],
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "es2017"
    ],
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  }
}